@model IEnumerable<Dropbox04.Models.Employee>
<p><a asp-controller="Employee" asp-action="AddEmployee">
    Add an Employee</a></p>
@{
    if (Model.Count() < 1)
    {
        <p>No Employee Yet</p>
    }
    else
    {
        <h3>All Employees</h3>
        <table border="1">
            <tr>
                <th>Employee ID</th>
                <th>Employee Name</th>
                <th>Hourly Wage</th>
                <th>Department</th>
            </tr>
            @{
                foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.EmployeeId</td>
                        <td>@employee.EmployeeName</td>
                        <td>@employee.HourlyWage</td>
                        <td>@employee.Department.DepartmentName</td>
                    </tr>
                }
            }
        </table>
    }
}
